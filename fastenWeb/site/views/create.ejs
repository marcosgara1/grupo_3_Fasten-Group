<%- include('./partials/head') %>
<body>
    <%- include('./partials/header') %>


    <div class="productAdd">

        <form action="/products" method="POST" enctype="multipart/form-data">
            <h2 class="tit">FORMULARIO DE CARGA DE PRODUCTO</h2>
            <div>
                <h3> Nombre del producto </h3>
               <input type="nombre" class="<%= errors.name ? 'is-invalid' : '' %>" id="name" name="name" placeholder="Nombre" value="<%= body.name ? body.name : ''%>">
               <div class="invalid-feedback"><%= errors.name ? errors.name.msg : ''%> </div>
            </div>
        
            <div>
                <h3>Nomenclatura del modelo</h3>
                <input type="nomenclatura" class="<%= errors.modelo ? 'is-invalid' : '' %>" name="modelo" placeholder="Modelo" value="<%= body.modelo ? body.modelo : ''%>">
                <div><%= errors.modelo ? errors.modelo.msg : ''%> </div>
            </div>
        
            <div>
                <h3>Precio</h3>
                <input type="precio" class="<%= errors.price ? 'is-invalid' : '' %>" name="price" placeholder="Precio" value="<%= body.precio ? body.precio : ''%>">
                <div><%= errors.precio ? errors.precio.msg : ''%> </div>
            </div>
        
            <div>
                <label for="Clasificación">Clasificación</label>
                <select name="clasificacion">
                    <option value="">-- Seleccionar --</option>

                    <% for (let clasi of clasificacion) { %>
                        <option value="<%= clasi.id %>"><%= clasi.nombre %></option>
                    <% } %>
                   
                </select>
            </div>
        
            <div>
                <h3>Descripción</h3>
                <textarea name="description" id="description" class="<%= errors.description ? 'is-invalid' : '' %>" placeholder="Descripción" value="<%= body.description ? body.description : ''%>"></textarea>
                <div class="invalid-feedback"><%= errors.description ? errors.description.msg : ''%> </div>   
            </div>

            <div>
                <h3>Descripción breve</h3>
                <textarea class="segunda" name="descriptionSeg" placeholder="Descripción breve"></textarea>    
            </div>

            <div>
                <input type="file" name="foto">Agregar foto</button>
                <div><%= errors.foto ? errors.foto.msg : ''%> </div>
            </div>
        
            <div>
                <button type="submit" class="publicar">Publicar</button>
            </div>
                       
            
        </form>
    
    </div>
<%- include('./partials/footer') %>
<script src="/js/create.js"></script>
</body>
</html>