<%- include('./partials/head') %>
<body>
    <%- include('./partials/header') %>


    <div class="productAdd">

        <form  method="POST" action="/products/<%= products.id %>?_method=PUT" enctype="multipart/form-data">
            <div>
               <input type="nombre" name="name" placeholder="Nombre" value="<%= products.name %>">
            </div>
        
            <div>
                <input type="nomenclatura" name="modelo" placeholder="Modelo" value="<%= products.modelo %>">
            </div>
        
            <div>
                <input type="precio" name="price" placeholder="Precio" value="<%= products.price %>">
            </div>
        
            <div>
                <label for="Clasificación">Clasificación</label>
                <select name="clasificacion">
                    <option value="">-- Seleccionar --</option>
                    <option value="1">Trabajos con tensión</option>
                    <option value="2">Seguridad</option>
                    <option value="3">Aparatos de testeo y medición</option>
                </select>
            </div>
        
            <div>
                <textarea name="description" placeholder="Descripción"><%= products.description %></textarea>    
            </div>

            <div>
                <h3>Descripción breve</h3>
                <textarea class="segunda" name="descriptionSeg" placeholder="Descripción breve"></textarea>    
            </div>

            <div>
                <img src="<%= products.foto %>" alt="">
                <input type="file" name="foto">Agregar foto</button>
            </div>
        
            <div>
                <button type="submit" class="publicar">Publicar</button>
            </div>                       
            
        </form>
    
    </div>
    
<%- include('./partials/footer') %>

</body>
</html>