<!DOCTYPE html>
<html>

<head>
  <title>Fasten</title>
  <link rel='stylesheet' href='/css/style.css' />
</head>

<body>
  <%- include('./partials/header') %>
  <main>
    <section class="perfil">
      <div class="datos-perfil">
        <h2 class="bienvenide">Bienvenida/o a tu perfil</h2>
        <div class="nombre-apellido">
          <h1><%= locals.userLogeado.first_name %> <%= locals.userLogeado.id %> </h1>
          <h1><%= locals.userLogeado.last_name %></h1>
        </div>
        <% if(!locals.userLogeado.foto){ %>
          <img src="/img/users/unnamed.jpg">
        <%} else {%>
          <img class='avatar img-fluid' src="/img/users/<%= locals.userLogeado.foto %>" alt="foto del usuario">
        <%}%>
        

        

        <div class="boton-editar">
          <a href="/users/<%= locals.userLogeado.id %>/formEditProfile"><i class="fas fa-pen-square"></i>Actualiz√° tu
            perfil</a>
        </div>
      </div>


    </section>
  </main>

  <%- include('./partials/footer') %>

</body>

</html>