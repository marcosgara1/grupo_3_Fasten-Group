<!DOCTYPE html>
<html>

<head>
  <title>Fasten</title>
  <link rel='stylesheet' href='/css/style.css' />
</head>

<body>
  <%- include('./partials/header') %>
  <main>
    <section class="perfil">
      <div class="datos-perfil">
        <h2 class="bienvenide">Bienvenida/o a tu perfil</h2>
        <div class="nombre-apellido">
          <h1><%= locals.userLogeado.first_name %></h1>
          <h1><%= locals.userLogeado.last_name %></h1>
        </div>
        <% if(!locals.userLogeado.foto){ %>
          <img src="/img/users/unnamed.jpg">
        <%} else {%>
          <img class='avatar img-fluid' src="/img/users/<%= locals.userLogeado.foto %>" alt="foto del usuario">
        <%}%>
        

        

        <div class="boton-editar">
          <a href="/users/<%= locals.userLogeado.id %>/formEditProfile"><i class="fas fa-pen-square"></i>Actualiz√° tu
            perfil</a>
        </div>
      </div>

      <div class="favoritos">
        <h3>Mis favoritos</h3>
        <div class="lista-favoritos">
          <% for(const product of productsFavorites) { %>

            <div class="prod-favoritos">
              <h5 id="nombre"><%= product.name %></h5>

              <h5 id="modelo"><%= product.modelo %></h5>

              <img class='foto img-fluid center' src="/img/productos/<%= product.foto %>" alt="foto del producto" width="150px" height="150px">

              <div class="botones-perfil">

                  <a href="/products/<%= product.id %>"><i class="fas fa-info-circle"></i></a>

                  <form method="POST" action="/users/removeFavorite/<%= product.id %>?_method=DELETE" enctype="multipart/form-data">    
                    <button type="submit"><i class="fas fa-trash"></i></button>
                </form>
                
              </div>
            </div>
          <% } %>
        </div>
      </div>


    </section>
  </main>

  <%- include('./partials/footer') %>

</body>

</html>