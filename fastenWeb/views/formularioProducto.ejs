<%- include('./partials/head') %>

<body>
    
<form action=validar.php method="POST">
    <p class="formulario">
       <label for="nombre">Nombre:</label>
       <input type="nombre" name="nombre del producto">
    </p>

    <p class="formulario">
        <label for="nomenclatura">Modelo:</label>
        <input type="nomenclatura" name="nomenclatura del modelo">
    </p>

    <p class="formulario">
        <label for="precio">Precio:</label>
        <input type="precio" name="precio">
    </p>

    <p class="formulario">
        <label for="descuento">¿Tiene descuento?</label>
        <input type="radio" name="tiene" value="sí">
        <input type="radio" name="tiene" value="no">
    </p>

    
    <p class="formulario">
        <label for="Clasificación">Clasificación</label>
        <select name="familia">
            <option value="TcT">Trabajos con tensión</option>
            <option value="Seg">Seguridad</option>
            <option value="ATM">Aparatos de testeo y medición</option>
        </select>
    </p>

    <p class="formulario">
        <label for="Descripción">Descripción</label>
        <textarea name="mensaje"></textarea>    
    </p>

    <p class="formulario">
        <button type="submit" class="publicar">Publicar</button>
    </p>
    
</form>
</body>