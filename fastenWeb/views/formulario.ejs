<form action=validar.php method="POST">
    <p class="formulario">
       <label for="nombre">Nombre:</label>
       <input type="nombre" name="nombre del producto">
    </p>

    <p class="formulario">
        <label for="nomenclatura">Modelo:</label>
        <input type="nomenclatura" name="nomenclatura del modelo">
    </p>

    <p class="formulario">
        <label for="precio">Precio:</label>
        <input type="precio" name="precio">
    </p>

    <p class="formulario">
        <label for="descuento">¿Tiene descuento?</label>
        <input type="radio" name="tiene" value="sí">
        <input type="radio" name="tiene" value="no">
    </p>

    
    <p class="formulario">
        <label for="Clasificación">Clasificación</label>
